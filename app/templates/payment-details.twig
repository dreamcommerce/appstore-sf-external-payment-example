{% extends 'base.html.twig' %}

{% block title %}Payment Details{% endblock %}

{% block body %}
<div class="payment-details-container">
    <h1 class="payment-details-title">Payment Details</h1>
    <div class="payment-data">
        {% if payment %}
            <div class="payment-data-box">
                <div>
                    <span class="payment-info-label">Technical Name:</span>
                    <span>{{ payment.name }}</span>
                </div>
                <div>
                    <span class="payment-info-label">Visibility:</span>
                    <span>{{ payment.visible == '1' ? 'Visible' : 'Hidden' }}</span>
                </div>
                <div>
                    <span class="payment-info-label">Currencies:</span>
                    {% if payment.currencies is iterable and payment.currencies|length > 0 %}
                        <ul>
                            {% for currency in payment.currencies %}
                                <li>
                                    {% if currency.name is defined %} {{ currency.name }}{% endif %}
                                </li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <span>None</span>
                    {% endif %}
                </div>
                <div>
                    <span class="payment-info-label">Supported Currencies:</span>
                    {% if payment.supportedCurrencies is iterable and payment.supportedCurrencies|length > 0 %}
                        <ul>
                            {% for currency in payment.supportedCurrencies %}
                                <li>
                                    {% if currency.name is defined %} {{ currency.name }}{% endif %}
                                </li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <span>None</span>
                    {% endif %}
                </div>
                {% set translation = payment.translations[locale] ?? null %}
                {% if translation %}
                    <div>
                        <span class="payment-info-label">Title:</span>
                        <span>{{ translation.title }}</span>
                    </div>
                    <div>
                        <span class="payment-info-label">Description:</span>
                        <span>{{ translation.description }}</span>
                    </div>
                {% endif %}

                <div>
                    <span class="payment-info-label">Payment Channels:</span>
                </div>
            </div>
        {% else %}
            <div class="payment-data-empty">No payment data available.</div>
        {% endif %}
    </div>
    <div class="payment-actions-panel">
        <button type="button" class="action-btn action-edit">Edit</button>
        <button type="button" class="action-btn action-notify">Send Notification</button>
        <button type="button" class="action-btn action-delete">Delete</button>
    </div>
</div>
{% endblock %}
