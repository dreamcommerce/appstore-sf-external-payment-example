{% extends 'base.html.twig' %}

{% block title %}Payment Settings{% endblock %}

{% block body %}
    <h1 id="shop-header">Payment Settings for the Shop...</h1>
    <div id="payment-setting">
        <div class="payment-list-header">
            <h2 class="payment-list-title">Configured Payments</h2>
            <button id="create-payment-btn" class="create-btn">
                <span class="icon-plus" aria-hidden="true">+</span> Create New Payment
            </button>
        </div>
        <div class="payment-list-frame modern payment-list-bordered">
            <div class="payment-list">
                {% for payment in paymentSettings %}
                    <div class="payment-item modern" data-id="{{ payment.payment_id }}" data-name="{{ payment.name }}" data-visible="{{ payment.visible }}" data-active="{{ payment.active|default('inactive') }}" data-currencies="{{ payment.currencies }}">
                        <div class="payment-info">
                            <span class="payment-name">{{ payment.name }}</span>
                            <span class="payment-visible">{{ payment.visible|capitalize }}</span>
                            <span class="payment-active">{{ payment.active|capitalize }}</span>
                        </div>
                        <div class="payment-actions">
                            <button class="edit-btn modern">Edit</button>
                            <button class="delete-btn modern">Delete</button>
                        </div>
                    </div>
                {% else %}
                    <div class="payment-empty modern">No configured payments available.</div>
                {% endfor %}
            </div>
        </div>
    </div>

    <!-- Modal for editing payment -->
    <div id="edit-payment-modal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>Edit Payment</h2>
            <form id="edit-payment-form">
                <input type="hidden" id="edit-payment-id" name="payment_id">

                <div class="form-group">
                    <label for="edit-payment-name">Payment Name</label>
                    <input type="text" id="edit-payment-name" name="name" required>
                </div>

                <div class="form-group">
                    <label for="edit-payment-active">Activity</label>
                    <select id="edit-payment-active" name="active">
                        <option value="1">Active</option>
                        <option value="0">Inactive</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="edit-payment-visible">Visibility</label>
                    <select id="edit-payment-visible" name="visible">
                        <option value="1">Visible</option>
                        <option value="0">Hidden</option>
                    </select>
                </div>

                <div class="form-group">
                    <button type="submit" class="save-btn">Save Changes</button>
                    <button type="button" class="cancel-btn">Cancel</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Modal for creating new payment -->
    <div id="create-payment-modal" class="modal">
        <div class="modal-content">
            <span class="close-create">&times;</span>
            <h2>Create New Payment</h2>
            <form id="create-payment-form">
                <div class="form-group">
                    <label for="create-payment-name">Payment Identifier</label>
                    <input type="text" id="create-payment-name" name="name" value="external" readonly class="readonly-field">
                    <small class="form-hint">The identifier is fixed and required by the API</small>
                </div>

                <div class="form-group">
                    <label for="create-payment-title">Payment Title</label>
                    <input type="text" id="create-payment-title" name="title" required placeholder="e.g., External Payment">
                </div>

                <div class="form-group">
                    <label for="create-payment-description">Payment Description</label>
                    <textarea id="create-payment-description" name="description" rows="3" placeholder="Description visible to customers"></textarea>
                </div>

                <div class="form-group">
                    <label for="create-payment-visible">Visibility</label>
                    <select id="create-payment-visible" name="visible">
                        <option value="1">Visible</option>
                        <option value="0">Hidden</option>
                    </select>
                </div>

                <input type="hidden" id="create-payment-locale" name="locale" value="pl_PL">

                <div class="form-group">
                    <button type="submit" class="save-btn">Create Payment</button>
                    <button type="button" class="cancel-create-btn">Cancel</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
